<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="switch_manner.clair.jp.MainActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="34dp"
        android:id="@+id/ringerMode"/>
    <Button
        android:text="ノーマルモード"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:id="@+id/normalMode"
        android:layout_below="@+id/ringerMode"
        android:textColor="#FFFFFF"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:background="#38ACC6"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="バイブレーションモード"
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_height="50dp"
        android:id="@+id/vibrateMode"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/silentMode"
        android:layout_alignStart="@+id/normalMode"
        android:layout_alignLeft="@+id/normalMode"
        android:layout_alignRight="@+id/normalMode"
        android:layout_marginBottom="39dp"
        android:background="#38ACC6"
        android:layout_alignEnd="@+id/silentMode"/>

    <Button
        android:text="サイレントモード"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/silentMode"
        android:layout_below="@+id/normalMode"
        android:textColor="#FFFFFF"
        android:layout_alignEnd="@+id/normalMode"
        android:layout_alignLeft="@+id/normalMode"
        android:layout_alignRight="@+id/normalMode"
        android:background="#38ACC6"
        android:layout_alignStart="@+id/normalMode"/>

</RelativeLayout>
